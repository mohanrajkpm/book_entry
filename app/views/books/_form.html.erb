<h1>Book Register</h1>
<%= simple_form_for @book, html: { class: 'form-horizontal' } do |f| %>
	<%= f.input :name %>
	<%= f.input :author %>
	<%= f.input :isbn %>
	<%= f.input :price %>
	<%= f.input :category %>
	<%= f.input :publish, as: :boolean %>
	<%= f.submit 'Save'%>
<% end %>
<%= link_to 'Back', books_path, class: 'btn btn-primary'
 %>